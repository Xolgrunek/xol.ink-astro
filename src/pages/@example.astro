---
import Layout from "../layouts/Layout.astro";
import RedoneCard from "../components/RedoneCard.astro";
---

<Layout title="Example Page">
    <main>
        <h1 class="text-5xl font-bold font-sans text-center text-slate-300">Example User
        </h1>
        <div class=" flex m-4 p-1 rounded-full w-48 max-w-sm 
        bg-gradient-to-r from-blue-500 via-red-500 to-green-500
        animate-gradient-x justify-center items-center mx-auto">
            <img class="rounded-full object-contain w-96 mx-auto" id="zrekae-profile" src="/profiles/example/giphy.gif" >

        </div>
        <br />
                <ul class="link-card-grid">
        <RedoneCard 
            href="https://example.com"
            title="Twitch"
            icon="mdi:twitch"
            body=""
        />
        <RedoneCard 
        href="https://example.com"
        icon="ic:baseline-tiktok"
        title="TikTok"
        body=""
        />
        <RedoneCard
        href="https://example.com"
        title="Twitter"
        icon="mdi:twitter"
        body=""
        />
        <RedoneCard
        href="https://example.com"
        title="Discord"
        icon="mdi:discord"
        body=""
        />
 <!--        <Card
            href="https://mas.to/@zrekae"
            title="Mastodon"
            body=""
            />
            -->
        <RedoneCard
        href="https://example.com"
        title="Ko-FI"
        icon="simple-icons:kofi"
        body=""
        />
        <RedoneCard
        href="https://example.com"
        title='DeviantArt'
        icon="mdi:deviantart"
        body=''
        />
        <RedoneCard
        href='https://example.com'
        title='YouTube'
